package model;

import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.Scanner;

import controller.Nav;

public class Resistration {

	//Todo登録関数-------------------------------------------------------------------------------------------------
		public Todo temporaryResistrationTodo() {
