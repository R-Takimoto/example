			TodoFolder folder = new TodoFolder();
			Scanner sc = new Scanner(System.in);//標準入力はcloseしなくてok??

			//TodoNo.処理
			int no = 0;//No.格納用
			int todoLength = //現在のTodo数を確認
			no = todoLength + 1;

			//見出し処理
			String header = standardInputHeader();

			//内容処理
			String body = standardInputBody();

			//期限処理
			Date limit = standardInputLimit();

			//優先度処理
			int prioritye = standardInputPrioritye();

			Todo todo = new Todo( no, header, body, limit, prioritye);
			return todo;
			//登録内容確認処理
